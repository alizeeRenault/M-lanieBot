
<div class="header bg-danger pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
           <h2 class="text-white d-inline-block mb-0">Latest</h2>
        </div>
      </div>
      <!-- Card stats -->
      <div class="align-items-center">
        <div class="row">

        <div class="col-xl-6 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Reported tweets</h5>
                  <p href=""><%= @tweet_count.to_s %> since begining</p>
                  <!-- <span class="h2 font-weight-bold mb-0">661</span> -->
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                    <i class="ni ni-money-coins"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"><i class="fa fa-calendar"></i>from <%= @account_count.to_s %> accounts</span>
                <span class="text-nowrap">since begining</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-6 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Alerts</h5>
                  <p href=""><%= @alert_count.to_s %> since begining</p>
                  <!-- <span class="h2 font-weight-bold mb-0">661</span> -->
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-purple text-white rounded-circle shadow">
                    <i class="ni ni-active-40"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"><i class="fa fa-calendar"></i>from <%= @alerter_count.to_s %> accounts</span>
                <span class="text-nowrap">since begining</span>
              </p>
            </div>
          </div>
        </div>
        
      </div>
      </div>
    </div>
  </div>
</div>
